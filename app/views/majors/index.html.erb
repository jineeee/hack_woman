  <% @majors.each do |major| %>
    <div class="card" style="width: 18rem; float : left; background-color: #EAEAEA;">
      <div class="card-body">
        <p class="card-text">day : <%= major.day %></p>
        <p class="card-text">content : <%= major.content %></p>
        <td><%= link_to 'Show', major %></td>
        <td><%= link_to 'Edit', edit_major_path(major) %></td>
        <td><%= link_to 'Destroy', major, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </div>
      
          <form action = "/<%=major.id%>/cmtma" method= "post">

     댓글 : <textarea name="content"></textarea>
     <button type="submit" class="btn btn-primary btn-md">제출</button>
   </form>
   
   <!--댓글보기-->
